<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_dialog"
    android:orientation="vertical" 
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp">

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/cm_03"
        android:orientation="horizontal"
        android:gravity="center_vertical"
    	android:padding="5dp">
        
        <TextView 
            android:id="@+id/tv_group_a_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/dialog_group_name"
            android:textColor="@color/black"
            android:text="A队"/>
        
        <TextView 
            android:id="@+id/tv_group_b_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/dialog_group_name"
            android:textColor="@color/white"
            android:text="B队"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        
        <TextView 
            android:id="@+id/tv_group_a_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/group_name"
            android:textColor="@color/white"
            android:text="场上球员  号码"
            android:textStyle="bold"/>
        
        <TextView 
            android:id="@+id/tv_group_b_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/group_name"
            android:textColor="@color/white"
            android:text="替补球员  号码"
            android:textStyle="bold"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">
        
        <ListView 
            android:id="@+id/lv_playing"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:divider="@color/black"
            android:dividerHeight="1px"/>
        
        <ListView 
            android:id="@+id/lv_bench"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:divider="@color/black"
            android:dividerHeight="1px"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/ll_trainers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/group_name"
            android:textColor="@color/white"
            android:text="教练员"
            android:textStyle="bold"/>
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:background="@color/white"/>
        
        <TextView 
            android:id="@+id/tv_trainers"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/group_name"
            android:textColor="@color/white"
            android:text="教练员1 教练员2 教练员3"/>
        
    </LinearLayout>

</LinearLayout>