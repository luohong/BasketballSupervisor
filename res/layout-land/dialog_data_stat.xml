<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="480dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:background="@color/bg_dialog"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_group_a_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="比赛数据统计列表"
        android:textColor="@color/black"
        android:textSize="@dimen/data_stat_title"
    	android:background="@color/bg_dialog_title" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" >
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
        
		    <ListView
		        android:id="@android:id/list"
		        android:layout_width="3000dp"
		        android:layout_height="match_parent"
		        android:background="#A7A9A8"
		        android:cacheColorHint="@null"
		        android:dividerHeight="1.0dip"
		        android:listSelector="@drawable/item_data_stat_selector"
		        android:drawSelectorOnTop="false"
		        android:fadingEdgeLength="0.0sp"
		        android:fastScrollEnabled="true" />
		  </LinearLayout>
    
    </HorizontalScrollView>

</LinearLayout>