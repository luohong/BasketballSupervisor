<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="480dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:background="@drawable/tan_bg03"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/cm_03"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_group_a_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="A队"
            android:textColor="@color/black"
            android:textSize="@dimen/dialog_group_name" />

        <TextView
            android:id="@+id/tv_group_b_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="B队"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_group_name" />
    </LinearLayout>

    <com.example.basketballsupervisor.widget.HorizontalListView
        android:id="@android:id/list"
        android:layout_width="1400.0dip"
        android:layout_height="match_parent"
        android:background="#FFB84D"
        android:cacheColorHint="@null"
        android:dividerHeight="1.0dip"
        android:drawSelectorOnTop="false"
        android:fadingEdgeLength="0.0sp"
        android:fastScrollEnabled="true" />

</LinearLayout>